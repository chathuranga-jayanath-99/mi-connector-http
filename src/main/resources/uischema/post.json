{
  "connectorName": "http",
  "operationName": "post",
  "title": "Send POST Request",
  "help": "<h1>Send POST Request</h1> <b>The post operation.</b>",
  "elements": [
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "General",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "configRef",
              "displayName": "Connection",
              "inputType": "connection",
              "allowedConnectionTypes": [
                "HTTP",
                "HTTPS"
              ],
              "defaultType": "connection.http",
              "defaultValue": "",
              "required": "true",
              "helpTip": "Connection to be used"
            }
          },
          {
            "type": "attributeGroup",
            "value": {
              "groupName": "Request",
              "elements": [
                {
                  "type": "attribute",
                  "value": {
                    "name": "relativePath",
                    "displayName": "Relative Path",
                    "inputType": "stringWithParamManager",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "Enter the relative path for the specific API endpoint, appended to the base URL.",
                    "matchPattern": "([^?&=]+)=([^&]+)",
                    "initialSeparator": "?",
                    "secondarySeparator": "&",
                    "keyValueSeparator": "="
                  }
                },
                {
                  "type": "table",
                  "value": {
                    "name": "headers",
                    "displayName": "Headers",
                    "description": "Key value pairs fo headers",
                    "tableKey": "propertyName",
                    "tableValue": "propertyValue",
                    "elements": [
                      {
                        "type": "attribute",
                        "value": {
                          "name": "propertyName",
                          "displayName": "Name",
                          "inputType": "string",
                          "required": false,
                          "helpTip": ""
                        }
                      },
                      {
                        "type": "attribute",
                        "value": {
                          "name": "propertyValue",
                          "displayName": "Value",
                          "inputType": "stringOrExpression",
                          "required": false,
                          "helpTip": ""
                        }
                      }
                    ]
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "requestBodyType",
                    "displayName": "Content Type",
                    "inputType": "combo",
                    "defaultValue": "JSON",
                    "required": "false",
                    "comboValues": [
                      "JSON",
                      "XML",
                      "TEXT"
                    ],
                    "helpTip": ""
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "requestBodyJson",
                    "displayName": "Request Body",
                    "inputType": "stringOrExpression",
                    "defaultValue": "${payload}",
                    "required": "false",
                    "helpTip": "",
                    "enableCondition": [
                      {
                        "requestBodyType": "JSON"
                      }
                    ]
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "requestBodyXml",
                    "displayName": "Request Body",
                    "inputType": "stringOrExpression",
                    "defaultValue": "${xpath('$body/node()')}",
                    "required": "false",
                    "helpTip": "",
                    "enableCondition": [
                      {
                        "requestBodyType": "XML"
                      }
                    ]
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "requestBodyText",
                    "displayName": "Request Body",
                    "inputType": "stringOrExpression",
                    "defaultValue": "${xpath('$body/node()')}",
                    "required": "false",
                    "helpTip": "",
                    "enableCondition": [
                      {
                        "requestBodyType": "TEXT"
                      }
                    ]
                  }
                }
              ]
            }
          },
          {
            "type": "attributeGroup",
            "value": {
              "groupName": "Properties",
              "isCollapsed": "true",
              "elements": [
                {
                  "type": "attribute",
                  "value": {
                    "name": "forceScAccepted",
                    "displayName": "Force immediate 202 Response",
                    "inputType": "checkbox",
                    "defaultValue": false,
                    "required": "false",
                    "helpTip": "Force a 202 HTTP response to the client immediately after the Micro Integrator receives the message."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "disableChunking",
                    "displayName": "Disable Chunking",
                    "inputType": "checkbox",
                    "defaultValue": false,
                    "required": "false",
                    "helpTip": "Disable HTTP chunking for outgoing messages, calculating content length before sending to the backend."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "forceHttp10",
                    "displayName": "Force HTTP 1.0",
                    "inputType": "checkbox",
                    "defaultValue": false,
                    "required": "false",
                    "helpTip": "Force HTTP 1.0 for outgoing HTTP messages."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "noKeepAlive",
                    "displayName": "No Keep-Alive",
                    "inputType": "checkbox",
                    "defaultValue": false,
                    "required": "false",
                    "helpTip": "Disable HTTP keep-alive for outgoing requests."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "forcePostPutNobody",
                    "displayName": "Force no body for POST/PUT methods",
                    "inputType": "checkbox",
                    "defaultValue": false,
                    "required": "false",
                    "helpTip": "Allow sending a request without a body for POST and PUT HTTP methods. Applicable only for HTTP PassThrough transport."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "forceHttpContentLength",
                    "displayName": "Force HTTP Content Length",
                    "inputType": "checkbox",
                    "defaultValue": false,
                    "required": "false",
                    "helpTip": "Send the request with content length (no chunking) when 'Content-Length' is present in the client request."
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
